<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data</title>
    <style>
        table{
            font-size: 0.6rem;
        }
        input[text]{
            background: none;
            border:none;
            text-align: center;
        }
    </style>
   
</head>
<body>
    <table border="1">
        <tr>
            <td>Id</td>
            <td>FirstName</td>
            <td>MiddleName</td>
            <td>LastName</td>
            <td>Date_of_Birth</td>
            <td>Number</td>
            <td>Email</td>
            <td>Address</td>
            <td>City</td>
            <td>State</td>
            <td>Country</td>
            <td>ZipCode</td>
            <td>Blood_Group</td>
        </tr>
        <% result.forEach( (row) => { %>
            <tr>
                <td><%= row.Id %></td>
                <td><%= row.Firstname %></td>
                <td><%= row.MiddleName %></td>
                <td><%= row.LastName %></td>
                <td><%= row.Date_of_Birth %></td>
                <td><%= row.Number %></td>
                <td><%= row.Email %></td>
                <td><%= row.Address %></td>
                <td><%= row.City %></td>
                <td><%= row.State %></td>
                <td><%= row.Country %></td>
                <td><%= row.ZipCode %></td>
                <td><%= row.Blood_Group %></td>
            </tr>
        <% }) %>
    </table>
    <table>
        <tr>
            <td><a href="/sdata/first" onclick="first()" id="first"> << </a></td>
            <td><a href="/sdata/prev/<%= Id %>" onclick="prev()" id="prev"> < </a></td>
            <td><input type="text" value="<%= Id %>" name="pgno" id="page"></td>
            <td><a href="/sdata/next/<%= Id %>" onclick="next()" id="next"> > </a></td>
            <td><a href="/sdata/last" onclick="last()" id="last" onclick="return maxpg()"> >> </a></td>
            <td><input type="hidden" name="maxpage" id="maxpage" value="<%= maxpage %>"></td>
        </tr>
    </table>
    <script>
        function maxpg()
        {
            var max = document.getElementById('maxpage').value;
            max = max/10;
            console.log(max);
        }
         var max = document.getElementById('maxpage').value;
            max = max/10;
            console.log(max);
        var page = document.getElementById('page').value;
        if(page == 1)
        {
            document.getElementById('prev').style.pointerEvents = "none";
            document.getElementById('first').style.pointerEvents = "none";
        }
        else if(page == max)
        {
            document.getElementById('next').style.pointerEvents = "none";
            document.getElementById('last').style.pointerEvents = "none";
        }
    </script>
</body>
</html>